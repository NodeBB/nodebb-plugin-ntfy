<div class="mb-3 association">
	<div class="input-group">
		<input type="text" name="notifyTags" class="form-control" placeholder="Tag" value="{./tag}" autocomplete="off" disabled />
		<span class="input-group-text">&rarr;</span>
		<input type="text" name="notifyChannels" class="form-control" placeholder="Channel" value="{./channel}" autocomplete="off" disabled />
		<input type="text" name="notifyEmails" class="form-control" placeholder="Email (optional)" value="{./email}" autocomplete="off" disabled />
		<button class="btn" type="button" data-action="remove"><i class="fa fa-trash text-danger"></i></button>
	</div>
</div>